<Window x:Class="XivGCDPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XivGCDPlanner"
        xmlns:controls="clr-namespace:XivGCDPlanner.Controls"
        mc:Ignorable="d"
        Title="FF14 GCD Planner" Height="700" Width="1200"
        MinHeight="600" MinWidth="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Final Fantasy XIV GCD Planner" 
                          FontSize="20" FontWeight="Bold" 
                          Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="戦闘スキルのタイムライン構築ツール" 
                          FontSize="12" Foreground="LightGray" 
                          HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Panel - Skill Selection -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel - Skill Selection -->
                <Border Grid.Column="0" Background="#F5F5F5" Padding="10" Margin="0,0,5,0">
                    <StackPanel>
                        <TextBlock Text="スキル選択" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <!-- GCD Setting -->
                        <GroupBox Header="設定" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="GCD時間（秒）:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding GcdTime, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" 
                                        Width="100" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <!-- Timeline Controls -->
                        <GroupBox Header="タイムライン操作">
                            <StackPanel>
                                <TextBlock Text="シーク位置:" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SeekPosition, UpdateSourceTrigger=PropertyChanged, StringFormat=F1}" 
                                        Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="検証" Command="{Binding ValidateTimelineCommand}" Margin="0,0,5,0"/>
                                    <Button Content="クリア" Command="{Binding ClearTimelineCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
                
                <!-- Center Panel - Skill Lists -->
                <Grid Grid.Column="1" Margin="5,0,5,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- GCD Skills -->
                    <GroupBox Grid.Column="0" Header="GCDスキル" Margin="0,0,5,0">
                        <ListBox ItemsSource="{Binding AvailableGcdSkills}" 
                                SelectedItem="{Binding SelectedSkill}"
                                AllowDrop="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue" Padding="5" Margin="2" CornerRadius="3"
                                           MouseDown="OnSkillMouseDown"
                                           MouseLeftButtonDown="OnSkillMouseDown">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Potency, StringFormat='威力: {0}'}" 
                                                      FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" 
                                                         Command="{Binding DataContext.SkillDoubleClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                    
                    <!-- Ability Skills -->
                    <GroupBox Grid.Column="1" Header="アビリティ" Margin="5,0,0,0">
                        <ListBox ItemsSource="{Binding AvailableAbilitySkills}" 
                                SelectedItem="{Binding SelectedSkill}"
                                AllowDrop="True">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightGreen" Padding="5" Margin="2" CornerRadius="3"
                                           MouseDown="OnSkillMouseDown"
                                           MouseLeftButtonDown="OnSkillMouseDown">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding RecastTime, StringFormat='リキャスト: {0}秒'}" 
                                                      FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftDoubleClick" 
                                                         Command="{Binding DataContext.SkillDoubleClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>
                </Grid>
                
                <!-- Right Panel - Statistics -->
                <Border Grid.Column="2" Background="#F0F0F0" Padding="10" Margin="5,0,0,0">
                    <StackPanel>
                        <TextBlock Text="統計情報" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        
                        <GroupBox Header="スキル使用回数">
                            <StackPanel>
                                <TextBlock Text="{Binding Statistics.TotalSkillUses, StringFormat='総使用回数: {0}'}"/>
                                <TextBlock Text="{Binding Statistics.GcdSkillUses, StringFormat='GCDスキル: {0}'}"/>
                                <TextBlock Text="{Binding Statistics.AbilityUses, StringFormat='アビリティ: {0}'}"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="ダメージ" Margin="0,10,0,0">
                            <StackPanel>
                                <TextBlock Text="{Binding Statistics.TotalPotency, StringFormat='総ポテンシー: {0}'}"/>
                                <TextBlock Text="{Binding Statistics.PotencyPerSecond, StringFormat='DPS: {0:F1}'}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
            </Grid>
            
            <!-- Bottom Panel - Timeline -->
            <Border Grid.Row="1" Background="White" Padding="10" Margin="0,10,0,0" BorderBrush="Gray" BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="タイムライン（右クリック: 時刻選択、ドラッグ: スキル配置、ダブルクリック: シーク位置に配置）" 
                              FontWeight="Bold" FontSize="12" DockPanel.Dock="Top" Margin="0,0,0,10"/>
                    
                    <controls:TimelineControl x:Name="TimelineControl" />
                </DockPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding TimelineEvents.Count, StringFormat='イベント数: {0}'}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
